{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "start": {
      // Make sure all packages are built once before starting watch mode
      "dependsOn": ["^build"],
      "cache": false
    },
    "e2e": {
      "dependsOn": [],
      "outputs": ["test-results/**", "playwright-report/**"]
    }
  }
}